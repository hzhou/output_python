subcode: check_if_regex
    $if $param=~/(\S+)\s*=~\s*\/(.*)\/(\w*)/
        my ($s, $pat, $flags)=($1,$2,$3)
        my $caps
        $if $param=~/->\s*([\w\s,]+)$/
            $caps=$1
        add_import("re")
        my $re="r'$pat', $s"
        $call @append_flags

        &call return_newblock, $func
            $if !$caps
                push @src, "$func re.search($re):"
                push @src, "INDENT"
                push @src, "BLOCK"
                push @src, "DEDENT"
            $else
                $if $func eq "elif"
                    die "regex doesn't work with elif\n"
                push @src, "_m=re.search($re)"
                push @src, "$func _m:"
                push @src, "INDENT"
                $call @add_caps
                push @src, "BLOCK"
                push @src, "DEDENT"

    subcode: append_flags
        $if $flags
            my @tlist=split //, $flags
            my @flist
            $foreach $t in @tlist
                $if $t=~/([imsx])/
                    push @flist, "re.".uc($1)

            $if @flist
                $re.=", ".join('|', @flist)

    subcode: add_caps
        $if $caps
            my @cap_list=split /,\s*/, $caps
            my $i=0
            $foreach $cap in @cap_list
                $i++
                push @src, "$cap = _m.group($i)"
        
