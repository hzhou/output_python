subcode: check_if_regex
    $if $param=~/\/.*\//
        my $caps
        $if $param=~/^(.*?)\s+->\s+(.+)$/
            ($param, $caps) = ($1, $2)

        my @parts = split /(\s+(?:and|or)\s+)/, $param
        $foreach $p in @parts
            $if $p=~/\/.*\//
                $p = translate_re($p)
        $param = join('', @parts)

        $if $caps
            my (@tlist, @glist)
            my $i=0
            $foreach $t in split /,\s*/, $caps
                $i++
                $if $t ne "_"
                    push @tlist, $t
                    push @glist, $i
            my $tlist=join(', ', @tlist)
            my $glist=join(', ', @glist)

            my $use_RE=MyDef::compileutil::get_macro_word("use_RE", 1)
            $if $use_RE
                $param =~ s/\bre\.(match|search)/RE.$1/g
            push @$out, "$func $param:"
            $if $use_RE
                push @$out, "    $tlist = RE.m.group($glist)"
            $else
                $if $param=~/\b(re\.(match|search)\(.*\))/
                    push @$out, "    m = $1"
                    push @$out, "    $tlist = m.group($glist)"
                $else
                    die "regex pattern not found\n"
            return 0

fncode: translate_re($param)
    my ($str, $not)
    $if $param=~/^(.+?)\s*([=!]~)\s*(\/.*)/
        $str = $1
        $if $2 eq "!~"
            $not = 1
        $param = $3
    $else
        $str = MyDef::compileutil::get_macro_word("re_str", 1)
        $if $param=~/^!\s*(\/.*)/
            $not = 1
            $param = $1

    $if $param=~/^\/(.*)\/(\w*)$/ -> $pat, $flags
        my $re
        add_import("re")
        $re = "re"

        $if $not
            $re = "not $re"

        $if substr($pat, 0, 1) eq "^"
            $re.=".match"
            substr($pat, 0, 1) = ""
        $else
            $re.=".search"

        $re.="(r'$pat', $str"
        $call @append_flags
        $re.=")"

        return $re

    subcode: append_flags
        $if $flags
            my @tlist=split //, $flags
            my @flist
            $foreach $t in @tlist
                $if $t=~/([imsx])/
                    push @flist, "re.".uc($1)

            $if @flist
                $re.=", ".join('|', @flist)


